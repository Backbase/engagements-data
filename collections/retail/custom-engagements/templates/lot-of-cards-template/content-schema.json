{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Travelling with a lot of Cards?",
  "description": "Order our travel card now and spend freely without any fees.",
  "type": "object",
  "properties": {
    "subject": {
      "title": "Subject",
      "type": "string",
      "maxLength": 100,
      "default": "Say Goodbye to Card Fees",
      "metadata": {
        "placeholderText": "Enter a subject (max. 100 chars)",
        "escaping": false
      }
    },
    "body": {
      "title": "Body of the message",
      "type": "object",
      "properties": {
        "title": {
          "title": "Title",
          "type": "string",
          "maxLength": 100,
          "default": "Travelling with a lot of Cards?",
          "metadata": {
            "placeholderText": "Enter a title (max. 100 chars)"
          }
        },
        "message": {
          "title": "Message",
          "type": "string",
          "maxLength": 100,
          "default": "Order our travel card now and spend freely without any fees",
          "metadata": {
            "placeholderText": "Enter a text (max. 100 chars)",
            "renderingHint": "textarea"
          }
        },
        "picture": {
          "title": "Image",
          "type": "file",
          "default":"{{contextRoot}}/assets/lot_of_cards.png",
          "metadata": {
            "renderingHint": "image"
          }
        },
        "buttonText": {
          "title": "Button text",
          "type": "string",
          "maxLength": 40,
          "default": "Order Now",
          "metadata": {
            "placeholderText": "Enter a button text (max. 40 chars)"
          }
        },
        "buttonLink": {
          "title": "Button link",
          "type": "string",
          "maxLength": 100,
          "default": "",
          "metadata": {
            "placeholderText": "Enter a button link (max. 100 chars)",
            "renderingHint": "url"
          }
        }
      },
      "metadata": {
        "layoutPath": "{{contextRoot}}/assets/index.html"
      }
    }
  },
  "required": [
    "subject",
    "title",
    "message",
    "picture",
    "buttonText",
    "buttonLink"
  ]
}
