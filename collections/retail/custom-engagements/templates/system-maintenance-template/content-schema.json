{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "System Maintenance",
  "description": "We will have downtime at Monday 4:00 PM",
  "type": "object",
  "properties": {
    "subject": {
      "title": "Subject of message",
      "type": "string",
      "maxLength": 100,
      "default": "We Are Working for You...",
      "metadata": {
        "placeholderText": "Enter a subject (max. 100 chars)",
        "escaping": false
      }
    },
    "body": {
      "title": "Body of message",
      "type": "object",
      "properties": {
        "title": {
          "title": "Title",
          "type": "string",
          "maxLength": 35,
          "default": "System Maintenance",
          "metadata": {
            "placeholderText": "Enter a title (max. 35 chars)"
          }
        },
        "message": {
          "title": "Message",
          "type": "string",
          "maxLength": 70,
          "default": "We will have downtime on Monday at 10pm",
          "metadata": {
            "placeholderText": "Enter a text (max. 70 chars)",
            "renderingHint": "textarea"
          }
        },
        "picture": {
          "title": "Image",
          "type": "file",
          "default":"{{contextRoot}}/assets/maintenance_alert.png",
          "metadata": {
            "renderingHint": "image"
          }
        },
        "buttonText": {
          "title": "Button text",
          "type": "string",
          "maxLength": 40,
          "default": "Find Out More",
          "metadata": {
            "placeholderText": "Enter a button text (max. 40 chars)"
          }
        },
        "buttonLink": {
          "title": "Button link",
          "type": "string",
          "maxLength": 100,
          "default": "",
          "metadata": {
            "placeholderText": "Enter a button link (max. 100 chars)",
            "renderingHint": "url"
          }
        }
      },
      "metadata": {
        "layoutPath": "{{contextRoot}}/assets/index.html"
      }
    }
  },
  "required": [
    "subject",
    "title",
    "message",
    "picture",
    "buttonText",
    "buttonLink"
  ]
}
