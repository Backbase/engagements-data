{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Batch Status Updated",
  "description": "Action event for in-app notification when a batch status is updated",
  "type": "object",
  "properties": {
    "title": {
      "title": "Title",
      "type": "string",
      "metadata": {
        "placeholderText": "Enter a title (max. 50 chars)",
        "renderingHint": "textarea",
        "customErrorMessages": {
          "required": "Please provide a title"
        }
      },
      "default": "Batch Status Updated"
    },
    "body": {
      "title": "Body",
      "type": "string",
      "metadata": {
        "placeholderText": "Enter a body message (max. 2000 chars)",
        "renderingHint": "textarea",
        "customErrorMessages": {
          "required": "Please provide a body text"
        }
      },
      "default": "Batch Status Updated"
    }
  },
  "required": [
    "title",
    "body"
  ]
}
